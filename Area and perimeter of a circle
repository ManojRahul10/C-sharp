class Circle
{
   public double r= double.Parse(Console.ReadLine());
    public double pi = 3.14;


    public void Area()
    {
        double area = pi * (r*r);
        Console.WriteLine(area);
    }
    public void Parameter()
    {
        double perimeter = 2 * pi * r;
        Console.WriteLine(perimeter);
    }
}

class Program
{
    static void Main()
    {
        Circle c = new Circle();
        c.Area();
        c.Parameter();
    }
}
